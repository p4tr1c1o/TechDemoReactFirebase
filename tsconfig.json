{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "jsx": "react-jsx",
        "removeComments": true
    },
    "include": [
        "src",
        "src/components",
        "vite.config.ts",
        "firebase.config.ts"
    ],
    "paths": {
        "@components/*": [
            "./src/components/*"
        ],
        "@pages/*": [
            "./src/pages/*"
        ],
    }
}